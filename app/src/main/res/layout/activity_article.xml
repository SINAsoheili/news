<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VIEW.ArticleActivity"
    android:padding="@dimen/padding_card_view"
    android:background="@color/general_background">

    <TextView
        android:id="@+id/tv_article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/tv_title_size"
        android:textColor="@color/tv_title"
        android:layout_marginRight="@dimen/margin_article_activity"
        android:layout_marginLeft="@dimen/margin_article_activity"
        />

    <TextView
        android:id="@+id/tv_article_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_article_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="italic"
        android:layout_marginLeft="@dimen/margin_article_activity"
        android:layout_marginTop="@dimen/big_margin_list_item"
        android:textSize="@dimen/tv_subtitle_size"
        android:textColor="@color/tv_subtitle"
        />

    <TextView
        android:id="@+id/tv_article_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_article_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/tv_subtitle_size"
        android:textColor="@color/tv_content"
        android:layout_marginRight="@dimen/margin_article_activity"
        android:layout_marginLeft="@dimen/margin_article_activity"
        android:layout_marginTop="@dimen/big_margin_list_item"
        />

</androidx.constraintlayout.widget.ConstraintLayout>